# cwmrc

# unbind all keys first
unbind-key all
unbind-mouse all

# behaviour
sticky     yes
snapdist   5
moveamount 10

# autogroup

# ignore
ignore tint2

# appearance
borderwidth 2
color    groupborder "#000000"
color   activeborder "#333333"
color inactiveborder "#111111"
color  urgencyborder "#ff4444"
color  ungroupborder "#121212"
color           font "#aaaaaa"
color        selfont "#ffffff"
color         menubg "#000000"
color         menufg "#333333"
# fontname             "Iosevka:size=11"
gap 100 100 100 100

# keymaps
bind-key 4S-q            quit
bind-key 4C-q            restart
bind-key 4-w             menu-window
bind-key 4-r             menu-exec
bind-key 4-s             menu-ssh

bind-key 4C-1            group-toggle-1
bind-key 4C-2            group-toggle-2
bind-key 4C-3            group-toggle-3
bind-key 4C-4            group-toggle-4
bind-key 4C-5            group-toggle-5
bind-key 4C-6            group-toggle-6
bind-key 4C-7            group-toggle-7
bind-key 4C-8            group-toggle-8
bind-key 4C-9            group-toggle-9
bind-key 4C-0            group-toggle-10

bind-key 4-1             group-only-1
bind-key 4-2             group-only-2
bind-key 4-3             group-only-3
bind-key 4-4             group-only-4
bind-key 4-5             group-only-5
bind-key 4-6             group-only-6
bind-key 4-7             group-only-7
bind-key 4-8             group-only-8
bind-key 4-9             group-only-9
bind-key 4-0             group-only-10

bind-key 4S-1            window-movetogroup-1
bind-key 4S-2            window-movetogroup-2
bind-key 4S-3            window-movetogroup-3
bind-key 4S-4            window-movetogroup-4
bind-key 4S-5            window-movetogroup-5
bind-key 4S-6            window-movetogroup-6
bind-key 4S-7            window-movetogroup-7
bind-key 4S-8            window-movetogroup-8
bind-key 4S-9            window-movetogroup-9
bind-key 4S-0            window-movetogroup-10

bind-key 4-Tab           window-cycle
bind-key 4S-Tab          window-rcycle
bind-key 4-q             window-delete
bind-key 4-x             window-raise
bind-key 4-z             window-lower
bind-key 4-KP_Begin      window-maximize
bind-key 4-m             window-maximize
bind-key 4S-m            window-hmaximize
bind-key 4C-m            window-vmaximize
bind-key 4S-t            window-htile
bind-key 4C-t            window-vtile

bind-key 4S-h            window-move-left
bind-key 4S-j            window-move-down
bind-key 4S-k            window-move-up
bind-key 4S-l            window-move-right

bind-key 4-h             window-move-left-big
bind-key 4-j             window-move-down-big
bind-key 4-k             window-move-up-big
bind-key 4-l             window-move-right-big

bind-key 4C-h            window-resize-left
bind-key 4C-j            window-resize-down
bind-key 4C-k            window-resize-up
bind-key 4C-l            window-resize-right

# mousemaps
bind-mouse 4-1           window-move
bind-mouse 4-2           window-lower
bind-mouse 4-3           window-resize

# menu
command "term"     "konsole"
command "web"      "chromium"
command "files"    "dolphin"
command "lock"     "i3lock -c 000000"
command "reboot"   "systemctl reboot"
command "shutdown" "systemctl poweroff"

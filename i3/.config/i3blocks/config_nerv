[external_ip]
full_text=
label=ext ip:
command=curl -s ifconfig.me/ip
interval=30
color=#29d900

[volume]
label=VOL:
full_text=
command=echo " $(/usr/lib/i3blocks/volume) "
color=#29d900
interval=once
signal=10


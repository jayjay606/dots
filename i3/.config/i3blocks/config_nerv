[disk /]
full_text=
label=root:
command=df -h / --output=avail | tail -n 1 | tr -d " "
interval=360
color=#29d900

[disk /home]
full_text=
label=home:
command=df -h /home --output=avail | tail -n 1 | tr -d " "
interval=360
color=#29d900

[mpd]
full_text=
label=music:
command=/home/common/scripts/mpd_i3bar
interval=persist
color=#29d900

[updates]
full_text=
label=updates:
command=/home/common/scripts/any_updates -d
interval=persist
color=#29d900

[clock]
full_text=
command=/home/common/scripts/clock -sf '%a, %d %b %H:%M'
interval=persist
color=#29d900
